<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
    tools:context=".view.fragments.RecipeStepFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/recipe_step_exo_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/step_player_margin"
            android:layout_marginLeft="@dimen/step_player_margin"
            android:layout_marginEnd="@dimen/step_player_margin"
            android:layout_marginRight="@dimen/step_player_margin"
            android:layout_marginTop="@dimen/step_player_margin"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/recipe_step_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/step_player_margin"
            android:layout_marginLeft="@dimen/step_player_margin"
            android:layout_marginEnd="@dimen/step_player_margin"
            android:layout_marginRight="@dimen/step_player_margin"
            android:layout_marginTop="@dimen/step_player_margin"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_step_instruction"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:textIsSelectable="true" />

    </LinearLayout>
</ScrollView>
